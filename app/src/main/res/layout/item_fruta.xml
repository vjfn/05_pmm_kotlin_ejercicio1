<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="8dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ivFruta"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:latout_constraintStart_toStartOf="parent"
        android:latout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvFrutaNombre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="21sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:latout_constraintEnd_toEndtOf="parent"
        android:latout_constraintStart_toEndOf="@id/ivFruta"
        android:latout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/tvDescripcion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:latout_constraintEnd_toEndtOf="parent"
        android:latout_constraintStart_toEndOf="@id/ivFruta"
        android:latout_constraintTop_toBottomOf="parent"/>


</androidx.constraintlayout.widget.ConstraintLayout>